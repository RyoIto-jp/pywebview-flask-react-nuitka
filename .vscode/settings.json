{
  "editor.tabSize": 4,
  "editor.defaultFormatter": "ms-python.python",
  "python.languageServer": "Pylance",
//   "python.analysis.typeCheckingMode": "off",
  "python.analysis.typeCheckingMode": "off",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore=W293, W504, E241, E501", "--max-line-length=160"],
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": ["--aggressive"],
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#25243C",
    "titleBar.activeBackground": "#343354",
    "titleBar.activeForeground": "#F9F9FC"
  }
}